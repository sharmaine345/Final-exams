// Declare the strings
const word1 = "RACECAR";
const word2 = "RECORDER";

// Function to check palindrome
function isPalindrome(str) {
    const reversed = str.split("").reverse().join("");
    console.log(`Original: ${str}, Reversed: ${reversed}`);
    return str === reversed;
}

// Check and log results
console.log(`Is "${word1}" a palindrome?`, isPalindrome(word1)); // true
console.log(`Is "${word2}" a palindrome?`, isPalindrome(word2)); // false
